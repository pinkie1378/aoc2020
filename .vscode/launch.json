    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Current TS File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ],
            "args": [
                "${relativeFile}"
            ],
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Get Input",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ],
            "args": [
                "${workspaceFolder}/src/get-input.ts",
                "7"
            ],
        }
    ]
}
